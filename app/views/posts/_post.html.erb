<div class="single_post_resume">
 <%= link_to user_post_path(post.author, post) do %>
   <h3>Post # <%= post.id %> Title: <%= post.title%></h3>
 <%end%>
 <p><%= truncate(post.text, :ommision => "... Read More", :length => 300) %></p>
 <div id="counter_div">
 <span>Comments: <%= post.comments_counter %></span>
 <span>Likes: <%= post.likes_counter %></span>
 </div>
</div>